<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/edit_text_background"
    android:orientation="vertical"
    android:paddingStart="@dimen/dim_50"
    android:paddingTop="@dimen/dim_16"
    android:paddingEnd="@dimen/dim_50"
    android:paddingBottom="@dimen/dim_25">

    <TextView
        android:id="@+id/txt_titel_dialog_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:paddingStart="@dimen/dim_8"
        android:paddingEnd="@dimen/dim_8"
        android:text="@string/are_you_sure_log_out"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_16"
        android:backgroundTint="@color/greylight"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dim_16"
        android:paddingEnd="@dimen/dim_16"
        android:weightSum="1">


        <ImageView
            android:id="@+id/img_close_logout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/edit_text_background"
            android:padding="@dimen/dim_8"
            app:srcCompat="@drawable/ic_close_black_24dp"
            android:layout_weight="0.5"
            android:layout_marginEnd="@dimen/dim_25"
            />

        <ImageView
            android:id="@+id/img_check_logout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/edit_text_background"
            android:padding="@dimen/dim_8"
            app:srcCompat="@drawable/ic_check"
            android:layout_weight="0.5"
            />

    </LinearLayout>
</LinearLayout>