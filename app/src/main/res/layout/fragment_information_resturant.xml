<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/dim_16"
    android:paddingEnd="@dimen/dim_16">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dim_8"
                android:paddingBottom="@dimen/dim_8"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:text="@string/status"
                    android:textSize="@dimen/txt_24" />

                <TextView
                    android:id="@+id/txt_open_information"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="clip_vertical|center_vertical"
                    android:text="opn"
                    android:textSize="@dimen/txt_24" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dim_8"
                android:paddingBottom="@dimen/dim_8"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:text="@string/city"
                    android:textSize="@dimen/txt_24" />

                <TextView
                    android:id="@+id/txt_city_name_information"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="clip_vertical|center_vertical"
                    android:text="opn"
                    android:textSize="@dimen/txt_24" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dim_8"
                android:paddingBottom="@dimen/dim_8"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:text="@string/nighbour_name"
                    android:textSize="@dimen/txt_24" />

                <TextView
                    android:id="@+id/txt_nighbour_name_information"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="clip_vertical|center_vertical"
                    android:text="opn"
                    android:textSize="@dimen/txt_24" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dim_8"
                android:paddingBottom="@dimen/dim_8"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:text="@string/price"
                    android:textSize="@dimen/txt_24" />

                <TextView
                    android:id="@+id/txt_mini_price_information"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="clip_vertical|center_vertical"
                    android:text="opn"
                    android:textSize="@dimen/txt_24" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dim_8"
                android:paddingBottom="@dimen/dim_8"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:text="@string/charger"
                    android:textSize="@dimen/txt_24" />

                <TextView
                    android:id="@+id/txt_charger_price_information"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="clip_vertical|center_vertical"
                    android:text="opn"
                    android:textSize="@dimen/txt_24" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999"
                android:text="" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>