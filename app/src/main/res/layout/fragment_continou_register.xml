<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loginbackfround"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/dim_8"
            android:paddingTop="@dimen/dim_8"
            android:paddingEnd="@dimen/dim_8">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/img_profile_continoue_signup"
                        android:layout_width="99dp"
                        android:layout_height="99dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dim_16"
                        android:src="@drawable/ic_user_plus_solid"
                        app:civ_border_width="0.5dp"
                        tools:ignore="VectorDrawableCompat" />

                    <EditText
                        android:id="@+id/edt_phone_continoue_signup"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_50"
                        android:layout_marginTop="@dimen/dim_8"
                        android:background="@null"
                        android:drawableStart="@drawable/ic_phone_solid"
                        android:drawablePadding="@dimen/dim_8"
                        android:ems="10"
                        android:hint="@string/phone"
                        android:inputType="phone"
                        android:text=""
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_1dp"
                        android:layout_marginTop="@dimen/dim_4"
                        android:background="@color/white" />

                    <EditText
                        android:id="@+id/edt_watsapp_continoue_signup"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_50"
                        android:layout_marginTop="@dimen/dim_8"
                        android:background="@null"
                        android:drawableStart="@drawable/ic_whatsapp_brands"
                        android:drawablePadding="@dimen/dim_8"
                        android:ems="10"
                        android:hint="@string/phone"
                        android:inputType="phone"
                        android:text=""
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_1dp"
                        android:layout_marginTop="@dimen/dim_4"
                        android:background="@color/white" />

                    <Button
                        android:id="@+id/btn_register_continoue_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dim_25"
                        android:background="@drawable/btn_splach_background"
                        android:drawableStart="@drawable/ic_sign_in_alt_solid"
                        android:drawablePadding="@dimen/dim_8"
                        android:paddingStart="@dimen/dim_100"
                        android:paddingEnd="@dimen/dim_100"
                        android:text="@string/login"
                        android:textColor="@color/white" />

                </LinearLayout>
            </ScrollView>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>