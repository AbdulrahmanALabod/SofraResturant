<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recycl_ofr_rest"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:gravity="center"
    android:layout_marginTop="@dimen/dim_16"
    android:layout_weight="0.2">
    <Button
        android:id="@+id/btn_add_ofr_rest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_splach_background"
        android:paddingStart="@dimen/dim_50"
        android:paddingEnd="@dimen/dim_50"
        android:text="@string/add_new_offer"
        android:textColor="@color/white" />
</LinearLayout>

</LinearLayout>