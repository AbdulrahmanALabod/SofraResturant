        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_8"
            android:background="@drawable/edit_text_background"
            android:orientation="vertical"
            android:padding="@dimen/dim_8">

            <TextView
                android:id="@+id/txt_net_price_order_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_8"
                android:text="@string/information_details" />

            <TextView
                android:id="@+id/txt_price_charger_order_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_8"
                android:text="@string/information_details" />

            <TextView
                android:id="@+id/txt_all_price_order_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_8"
                android:text="@string/information_details" />

            <TextView
                android:id="@+id/txt_pay_way_price_order_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_8"
                android:text="@string/information_details" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim_8"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dim_16"
            android:paddingBottom="@dimen/dim_16"
            android:weightSum="1.2">

            <Button
                android:id="@+id/btn_call_order_information"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dim_8"
                android:layout_weight="0.4"
                android:background="@drawable/btn_splach_background"
                android:drawableEnd="@drawable/ic_phone_solid"
                android:padding="@dimen/dim_8"
                android:text="@string/call"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_accept_order_information"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/dim_8"
                android:layout_weight="0.4"
                android:background="@drawable/btn_splach_background"
                android:backgroundTint="@color/green"
                android:drawableEnd="@drawable/ic_thumbs_up_regular"
                android:padding="@dimen/dim_8"
                android:text="@string/accept"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_cancel_order_information"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/dim_8"
                android:layout_weight="0.4"
                android:background="@drawable/btn_splach_background"
                android:backgroundTint="@color/pampy"
                android:drawableEnd="@drawable/ic_times_solid"
                android:padding="@dimen/dim_8"
                android:text="@string/cancel"
                android:textColor="@color/white" />


        </LinearLayout>

