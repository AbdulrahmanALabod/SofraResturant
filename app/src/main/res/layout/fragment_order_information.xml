<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/dim_8"
        android:paddingEnd="@dimen/dim_8"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="@dimen/dim_8"
            android:paddingStart="@dimen/dim_8"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_order_information"
                android:layout_width="0dp"
                android:layout_height="@dimen/dim_100"
                android:layout_weight="0.3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txt_name_rest_order_information"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dim_8"
                    android:text="TextView"
                    />

                <TextView
                    android:id="@+id/txt_date_order_information"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:paddingStart="@dimen/dim_8"
                    android:text="TextView" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_address_order_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:paddingStart="@dimen/dim_8"
            android:paddingTop="@dimen/dim_16"
            android:paddingBottom="@dimen/dim_16"
            android:text="TextView"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dim_8"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_8"
            android:background="@drawable/edit_text_background"
            android:orientation="vertical"
            android:padding="@dimen/dim_8">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/information_details"
                android:paddingStart="@dimen/dim_8"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recl_all_order_infromation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_8">

            </android.support.v7.widget.RecyclerView>
