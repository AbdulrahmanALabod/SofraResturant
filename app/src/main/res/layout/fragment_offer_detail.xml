<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Offer information"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dim_8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_16"
        android:orientation="vertical"
        android:background="@drawable/edit_text_background"
        android:paddingBottom="@dimen/dim_25"
        >

        <TextView
            android:id="@+id/txt_name_offer_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:gravity="center"
            android:paddingTop="@dimen/dim_8"/>

        <TextView
            android:id="@+id/txt_consist_offer_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:gravity="center"
            android:paddingTop="@dimen/dim_8"/>

        <TextView
            android:id="@+id/txt_from_offer_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="from"
            android:gravity="center"
            android:paddingTop="@dimen/dim_8"/>

        <TextView
            android:id="@+id/txt_to_offer_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="to"
            android:gravity="center"
            android:paddingTop="@dimen/dim_8"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_it"
            android:background="@drawable/btn_splach_background"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim_8"
            />
    </LinearLayout>
</LinearLayout>