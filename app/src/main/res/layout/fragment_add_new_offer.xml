<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dim_16"
            android:layout_marginEnd="@dimen/dim_16"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dim_32"
            >

            <TextView
                android:id="@+id/txt_titel_ofr_rst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_8"
                android:gravity="center"
                android:text="Add image offer"
                android:textSize="24sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_offer_ofr_rst"
                android:layout_width="@dimen/dim_150"
                android:layout_height="@dimen/dim_150"
                android:layout_below="@+id/txt_titel_ofr_rst"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dim_16" />

            <EditText
                android:id="@+id/edt_name_of_offer_ofr_rst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_offer_ofr_rst"
                android:layout_marginTop="@dimen/dim_16"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:hint="@string/offer_name"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/dim_8"
                android:paddingTop="@dimen/dim_16"
                android:paddingBottom="@dimen/dim_16" />

            <EditText
                android:id="@+id/edt_desc_ofr_rst"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_150"
                android:layout_below="@+id/edt_name_of_offer_ofr_rst"
                android:layout_marginTop="@dimen/dim_16"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:gravity="top"
                android:hint="@string/description"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/dim_8"
                android:paddingTop="@dimen/dim_16"
                android:paddingBottom="@dimen/dim_16" />

            <LinearLayout
                android:id="@+id/liner_date_ofr_rst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_desc_ofr_rst"
                android:layout_marginTop="@dimen/dim_16"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txt_from_date_ofr_rst"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dim_16"
                    android:layout_weight="0.4"
                    android:background="@drawable/edit_text_background"
                    android:drawableEnd="@drawable/ic_calendar_alt_regular"
                    android:paddingStart="@dimen/dim_8"
                    android:paddingTop="@dimen/dim_16"
                    android:paddingEnd="@dimen/dim_8"
                    android:paddingBottom="@dimen/dim_16"
                    android:text="@string/from"

                    />

                <TextView
                    android:id="@+id/txt_to_date_ofr_rst"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="@drawable/edit_text_background"
                    android:drawableEnd="@drawable/ic_calendar_alt_regular"
                    android:hint="@string/to"
                    android:paddingStart="@dimen/dim_8"
                    android:paddingTop="@dimen/dim_16"
                    android:paddingEnd="@dimen/dim_8"
                    android:paddingBottom="@dimen/dim_16"

                    />


            </LinearLayout>

            <Button
                android:id="@+id/btn_ofr_rst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/liner_date_ofr_rst"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dim_16"
                android:background="@drawable/btn_splach_background"
                android:paddingStart="@dimen/dim_50"
                android:paddingEnd="@dimen/dim_50"
                android:text="@string/add"
                android:textColor="@color/white"
                android:layout_alignParentBottom="false"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
