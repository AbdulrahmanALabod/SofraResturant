<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/dim_8"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/root_rest_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-35dp"
        android:paddingStart="@dimen/dim_25"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dim_8"
        android:layout_marginEnd="@dimen/dim_8"
        android:background="@drawable/edit_text_background"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dim_16"
        android:paddingBottom="@dimen/dim_16"
        android:layout_toEndOf="@id/img_resturant_item">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:paddingStart="@dimen/dim_25"
                android:paddingTop="@dimen/dim_16">

                <TextView
                    android:id="@+id/txt_naem_rest_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KFC CHIKEN"
                      android:textColor="@color/textColorSecndry"
                    android:textSize="12sp"
                    />

                <RatingBar
                    android:id="@+id/ratingBar_rest_item"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:max="5"
                    android:numStars="5"
                    />

                <TextView
                    android:id="@+id/txt_minimum_price_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_4"
                    android:text="dfdsfsdf"
                    android:textSize="8sp"
                   />

                <TextView
                    android:id="@+id/txt_cost_delvary_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="price delavry is 10 $"
                    android:textSize="8sp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dim_16"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@drawable/ic_circle_solid"
                    android:text="" />

                <TextView
                    android:id="@+id/txt_open_rest_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:text="open"
                    android:textSize="10sp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_resturant_item"
        android:layout_width="@dimen/dim_100"
        android:layout_height="@dimen/dim_120"
        android:src="@drawable/kfc"
        app:civ_border_width="0.4dp"
        android:layout_centerVertical="true"/>

</RelativeLayout>